<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccessActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="タイムカプセルにアクセスします！！"
            android:textSize="36sp" />

        <EditText
            android:id="@+id/aCapsuleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="タイムカプセルの名前"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/aGraduate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="卒業年"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/aSchool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="通っていた学校"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/aTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="担任の名前"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/aAikotoba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="秘密の合言葉"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="アクセス" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>